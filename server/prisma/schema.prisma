// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  firstName    String
  lastName     String
  email        String         @id @unique
  password     String
  Posts        Posts[]
  postComments postComments[]
  WorkPts      Int            @default(0)
  ResourcePts  Int            @default(0)
  Contributor  Contributor[]
  Events       Events[]
  Participant  Participant[]
}

model postComments {
  commentId   Int    @id @default(sequence())
  comment     String
  Author      User   @relation(fields: [userEmail], references: [email])
  userEmail   String
  Posts       Posts  @relation(fields: [postsPostId], references: [postId])
  postsPostId Int
}

model Posts {
  postId    Int            @id @default(sequence())
  title     String
  tags      String[]
  content   String
  image     String?
  Likes     Int            @default(0)
  author    User           @relation(fields: [userEmail], references: [email])
  userEmail String
  createdAt DateTime       @default(now())
  Comments  postComments[]
}

model eventComments {
  commentId     Int     @id @default(sequence())
  comment       String
  Events        Events? @relation(fields: [eventsEventId], references: [eventId])
  eventsEventId Int?
}

model Contributor {
  contributorId Int      @id @default(sequence())
  user          User     @relation(fields: [userEmail], references: [email])
  contributions String[]
  monetary      Float?
  userEmail     String
  Events        Events?  @relation(fields: [eventsEventId], references: [eventId])
  eventsEventId Int?
}

model Participant {
  participantId Int    @id @default(sequence())
  user          User   @relation(fields: [userEmail], references: [email])
  userEmail     String
  Events        Events @relation(fields: [eventsEventId], references: [eventId])
  eventsEventId Int
}

model Events {
  eventId        Int             @id @default(sequence())
  Image          String?
  title          String
  description    String
  time           DateTime
  city           String
  address        String
  eventTags      String[]
  organizer      User            @relation(fields: [organizerEmail], references: [email])
  organizerEmail String
  particicpants  Participant[]
  contributors   Contributor[]
  comments       eventComments[]
  DonationAmount Float  @default(0)
}
