// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  firstName   String
  lastName    String
  email       String     @id @unique
  password    String
  Posts       Posts[]
  Comments    Comments[]
  WorkPts     Int        @default(0)
  ResourcePts Int        @default(0)
}

model Comments {
  commentId   Int    @id @default(sequence())
  comment     String
  Author      User   @relation(fields: [userEmail], references: [email])
  userEmail   String
  Posts       Posts? @relation(fields: [PostId], references: [postId])
  PostId Int?
}

model Posts {
  postId    Int        @id @default(sequence())
  title     String
  tags      String[]
  content   String
  Likes     Int        @default(0)
  author    User       @relation(fields: [userEmail], references: [email])
  userEmail String
  createdAt DateTime   @default(now())
  Comments  Comments[]
}
